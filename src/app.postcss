@tailwind base;
@tailwind components;
@tailwind utilities;

::-webkit-scrollbar {
	width: 5px;
}

::-webkit-scrollbar-thumb {
	background-color: rgb(55 65 81 / var(--tw-bg-opacity)); /* color of the scroll thumb */
	border-radius: 20px; /* roundness of the scroll thumb */
}
